<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <ImageView
            android:id="@+id/cv_foto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_id_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.014"></ImageView>

        <TextView
            android:id="@+id/tv_id_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:padding="3dp"
            android:text="hola"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cv_foto"
            app:layout_constraintTop_toTopOf="parent">


        </TextView>

        <TextView
            android:id="@+id/tv_nombre_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="1dp"
            android:padding="3dp"
            android:text="hola"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cv_foto"
            app:layout_constraintTop_toBottomOf="@+id/tv_id_item">

        </TextView>

        <ImageButton
            android:id="@+id/ib_info_item"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="19dp"
            android:background="@android:drawable/ic_menu_info_details"
            app:layout_constraintEnd_toStartOf="@+id/ib_editar_item"
            app:layout_constraintStart_toEndOf="@+id/cv_foto"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre_item" />

        <ImageButton
            android:id="@+id/ib_editar_item"
            android:layout_width="45dp"
            android:layout_height="45dp"

            android:layout_marginTop="19dp"
            android:background="@android:drawable/ic_menu_edit"
            app:layout_constraintEnd_toStartOf="@+id/ib_borrar_item"
            app:layout_constraintStart_toEndOf="@+id/ib_info_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre_item" />

        <ImageButton
            android:id="@+id/ib_borrar_item"
            android:layout_width="45dp"
            android:layout_height="45dp"

            android:layout_marginTop="16dp"
            android:background="@android:drawable/ic_menu_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ib_editar_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>